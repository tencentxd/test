<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/dark3" /> <!-- Set your desired background color -->
            <corners android:radius="20dp" /> <!-- Set your desired corner radius -->
        </shape>
    </item>

    <!-- Shadow layer -->
    <item android:right="0dp" android:left="0dp" android:top="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark3" /> <!-- Set your desired shadow color and transparency -->
            <corners android:radius="20dp" /> <!-- Match the corner radius of the background shape -->
        </shape>
    </item>

</layer-list>
